<script>
  // @ts-nocheck
  import ProductsModule, {
    products,
    productsFiltered,
  } from "../../../components/products/products.module.js";
  const searchInput = document.querySelector("#search-dropdown-desktop");
  const searchBtn = document.querySelector("#search-button-desktop");

  await ProductsModule.getProducts();
  console.log("Productos obtenidos:", products.get());

  searchBtn.addEventListener("click", (e) => {
    e.preventDefault();
    const query = searchInput.value.toLowerCase();
    const allProducts = products.get();
    const filtered = allProducts.filter((product) =>
      product.name.toLowerCase().includes(query)
    );
    productsFiltered.set(filtered);
    console.log("FILTRADOS:", filtered);
  });
</script>
